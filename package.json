{
  "name": "shiori",
  "version": "1.0.0",
  "description": "A modern and fast to setup Documentation Framework for NextJS 14+",
  "author": "Robin Ruf",
  "keywords": [],
  "license": "MIT",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "scripts": {
    "transform-svgs": "npx @svgr/cli --typescript --icon --out-dir src/icons src/assets",
    "build": "npm run transform-svgs && tsup",
    "dev": "npm run transform-svgs && tsup --watch"
  },
  "peerDependencies": {
    "next": ">=14",
    "react": ">=18",
    "react-dom": ">=18"
  },
  "dependencies": {
    "@mdx-js/loader": "^3.1.0",
    "@mdx-js/react": "^3.1.0",
    "@next/mdx": "^15.1.5",
    "@tabler/icons-react": "^3.26.0",
    "fuse.js": "^7.0.0",
    "geist": "^1.3.1",
    "gray-matter": "^4.0.3",
    "next-themes": "^0.4.4",
    "react-syntax-highlighter": "^15.6.1",
    "rehype-autolink-headings": "^7.1.0",
    "rehype-slug": "^6.0.0",
    "remark-gfm": "^4.0.0",
    "remove-markdown": "^0.6.0"
  },
  "devDependencies": {
    "@types/mdx": "^2.0.13",
    "@svgr/plugin-svgo": "^8.1.0",
    "@types/node": "^22.13.0",
    "@types/react": "^19.0.8",
    "@types/react-syntax-highlighter": "^15.5.13",
    "esbuild-plugin-svgr": "^3.0.0",
    "tsup": "^8.3.5",
    "typescript": "^5.7.3"
  },
  "exports": {
    "./components": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    ".": {
      "import": "./dist/config.mjs",
      "require": "./dist/config.js"
    },
    "./mdx": {
      "import": "./dist/mdx.mjs",
      "require": "./dist/mdx.js"
    },
    "./server": {
      "import": "./dist/server.mjs",
      "require": "./dist/server.js"
    }
  },
  "files": [
    "dist"
  ],
  "sideEffects": false
}
