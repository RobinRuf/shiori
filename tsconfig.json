{
  "compilerOptions": {
    "target": "es2021",
    "module": "ESNext",
    "declaration": true,
    "noEmit": true,
    "esModuleInterop": true,
    "strict": true,
    "outDir": "dist",
    "skipLibCheck": true,
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "resolveJsonModule": true
  },
  "include": ["src/**/*", "globals.d.ts"],
  "exclude": ["dist"]
}
